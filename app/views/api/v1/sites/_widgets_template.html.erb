<div>
  <div class="widgets-container">
    <% widgets.order(:position).each do |widget| %>
      <div class='widget' style="background-color: <%= widget.background_color %>;">
        <h3><%= widget.title %></h3>
        <p class='content'> <%= widget.content %></p>
      </div>
    <% end %>
  </div>
</div>
